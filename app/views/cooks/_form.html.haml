= form_for @cook do |f|
  - if @cook.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cook.errors.count, "error")} prohibited this cook from being saved:"
      %ul
        - @cook.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :host
    = f.select(:host_id, options_for_select(for_options(@hosts, :name)))
  .field
    = f.label :recipe
    = f.select(:recipe_id, options_for_select(for_options(@recipes, :name)))
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :memo
    = f.text_area :memo
  .actions
    = f.submit 'Run', class: 'class: btn btn-large btn-block btn-primary'
