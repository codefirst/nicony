-# -*- coding: utf-8 -*-
!!!
%html
 %head
  %meta{:charset => 'utf-8'}
  = stylesheet_link_tag 'application'
  = csrf_meta_tag
  = favicon_link_tag
  %title= format_title(yield :title)
 %body
  .container
   .row
    %h1.logo= link_to image_tag('logo.png', alt: 'Nicony', title: 'Nicony'), root_path

   .row
    .navbar.navbar-inverse
     .navbar-inner
      .container
       %ul.nav
        %li= link_to t(:top), root_path
        %li= link_to t(:hosts), hosts_path
        %li= link_to t(:recipes), recipes_path

   .row
    = yield

 = javascript_include_tag "application"
 = yield :javascript
